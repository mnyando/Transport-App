<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Navigation Bar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:contentDescription="Back"
                android:src="@drawable/baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Modify Student"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

        <!-- Filter Card with Dropdown and RecyclerView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:padding="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/filterDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/studentRecyclerView"
                    android:layout_width="358dp"
                    android:layout_height="217dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Student Form Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:padding="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Student Name -->
                <EditText
                    android:id="@+id/studentNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Student Name"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <!-- Class Dropdown -->
                <Spinner
                    android:id="@+id/classDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"/>

                <!-- Student ID Number -->
                <EditText
                    android:id="@+id/studentIdInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Student ID Number"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <!-- Assigned Route Dropdown -->
                <Spinner
                    android:id="@+id/routeDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"/>

                <!-- Parent Name -->
                <EditText
                    android:id="@+id/parentNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Parent Name"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <!-- Parent Contact -->
                <EditText
                    android:id="@+id/parentContactInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Parent Contact"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <!-- Home Location -->
                <EditText
                    android:id="@+id/homeLocationInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Home Location"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <!-- Save Button -->
                <Button
                    android:id="@+id/deleteStudentButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/green"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:text="Delete Student"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
