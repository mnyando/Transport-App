<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/top_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#228B22"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_android_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="12dp"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </androidx.appcompat.widget.Toolbar>

        <!-- General Information Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/general_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#006400"
                    android:gravity="center"
                    android:paddingBottom="12dp"/>

                <!-- Image Section -->
                <ImageView
                    android:id="@+id/landing_image"
                    android:layout_width="333dp"
                    android:layout_height="189dp"
                    android:layout_gravity="center"
                    android:contentDescription="Transport Information"
                    android:paddingBottom="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landing_image" />

                <!-- Information Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/white">

                    <!-- Students Enrolled -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/students_enrolled_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:paddingTop="6dp"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/students_enrolled"
                                android:contentDescription="Students Enrolled"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Students Enrolled"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingTop="8dp"/>

                            <TextView
                                android:id="@+id/studentsEnrolledText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1200"
                                android:textSize="26sp"
                                android:textColor="#228B22"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Routes Travelled -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/routes_travelled_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:paddingTop="6dp"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/routes_travelled"
                                android:contentDescription="Routes"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Routes Travelled"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingTop="8dp"/>

                            <TextView
                                android:id="@+id/routesTraveledText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textSize="26sp"
                                android:textColor="#228B22"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Active Vehicles -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/active_vehicles_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/active_vehicles"
                                android:contentDescription="Active Vehicles"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Vehicles"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingTop="8dp"/>

                            <TextView
                                android:id="@+id/activeVehiclesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textSize="26sp"
                                android:textColor="#228B22"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Inactive Vehicles -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/inactive_vehicles_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/inactive_vehicles"
                                android:contentDescription="Inactive Vehicles"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inactive Vehicles"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingTop="8dp"/>

                            <TextView
                                android:id="@+id/inactiveVehiclesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="26sp"
                                android:textColor="#FF4500"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Active Drivers -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/active_drivers_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/active_driverr"
                                android:contentDescription="Active Drivers"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Drivers"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingTop="8dp"/>

                            <TextView
                                android:id="@+id/activeDriversText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18"
                                android:textSize="26sp"
                                android:textColor="#228B22"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Inactive Drivers -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/inactive_drivers_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:padding="12dp">

                        <LinearLayout
