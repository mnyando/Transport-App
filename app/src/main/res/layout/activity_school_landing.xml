                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/add_student"
                        android:contentDescription="Add Student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Student        Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modify Student Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/modifyStudent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/modify_student"
                        android:contentDescription="Modify Student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modify Student Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Delete Student Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/deleteStudent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/delete_student"
                        android:contentDescription="Delete Student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Student Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Title for Vehicle Record Actions Section -->
        <TextView
            android:id="@+id/ManageVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <!-- Vehicle Record Actions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <!-- Add Vehicle Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AddVehicle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/add_vehicle"
                        android:contentDescription="Add Student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Vehicle       Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modify Vehicle Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ModifyVehicle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/modify_vehicle"
                        android:contentDescription="Modify Student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modify Vehicle Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Delete Vehicle Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/DeleteVehicle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/delete_vehicle"
                        android:contentDescription="Delete Student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Vehicle Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Title for Route Record Actions Section -->
        <TextView
            android:id="@+id/RouteRecordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <!-- Route Record Actions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <!-- Add Route Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AddRoute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
