                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/add_route"
                        android:contentDescription="Add Route" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Route       Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modify Route Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ModifyRoute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:paddingTop="6dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/modify_route"
                        android:contentDescription="Modify Route" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modify Route Record"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Delete Route Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/DeleteRoute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
