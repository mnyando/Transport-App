                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:paddingTop="6dp"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/inactive_driver"
                                android:contentDescription="Inactive Drivers" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inactive Drivers"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingTop="8dp"/>

                            <TextView
                                android:id="@+id/inactiveDriversText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18"
                                android:textSize="26sp"
                                android:textColor="#228B22"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Title for Student Record Actions Section -->
        <TextView
            android:id="@+id/tvStudentRecordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Record Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="1dp"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <!-- Student Record Actions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <!-- Add Student Record -->
            <androidx.cardview.widget.CardView
                android:id="@+id/addStudent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
