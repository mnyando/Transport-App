<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F4F4"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Navigation Bar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#228B22"
            android:elevation="4dp"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_android_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="12dp"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Role"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Role Selection Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- School Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/landing_image"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor bus routes, ensure student safety, and manage transport operations seamlessly."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"/>

                    <Button
                        android:id="@+id/school_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go to School Page"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Parent Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/landing_image"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parent"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track your child's bus in real-time and receive instant pickup/drop-off alerts."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"/>

                    <Button
                        android:id="@+id/parent_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go to Parent Page"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Driver Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/landing_image"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigate efficiently and keep parents updated with real-time transport status."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"/>

                    <Button
                        android:id="@+id/driver_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go to Driver Page"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#228B22"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© 2025 School Transport Solutions"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
