<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransportApp"
        tools:targetApi="31">
        <activity
            android:name=".DeleteVehicle"
            android:exported="false" />
        <activity
            android:name=".ModifyVehicle"
            android:exported="false" />
        <activity
            android:name=".AddVehicle"
            android:exported="false" />
        <activity
            android:name=".DeleteStudent"
            android:exported="false" />
        <activity
            android:name=".ModifyStudent"
            android:exported="false" />
        <activity
            android:name=".AddStudent"
            android:exported="false" />
        <activity
            android:name=".ModifyStaff"
            android:exported="false" />
        <activity
            android:name=".AddStaff"
            android:exported="false" />
        <activity
            android:name=".ModifyRoute"
            android:exported="false" />
        <activity
            android:name=".AddRoute"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="false" /> <!-- ChatActivity, marked as non-exported for security -->
        <activity
            android:name=".ChatActivity"
            android:exported="false" /> <!-- ParentLanding Activity -->
        <activity
            android:name=".ParentLanding"
            android:exported="false" /> <!-- SchoolLanding Activity -->
        <activity
            android:name=".SchoolLanding"
            android:exported="false" /> <!-- Navigation Activity -->
        <activity
            android:name=".Navigation"
            android:exported="false" /> <!-- DriverLanding Activity -->
        <activity
            android:name=".DriverLanding"
            android:exported="false" /> <!-- MainActivity is exported since it's the entry point of the app -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>

                <!-- Main entry point to the app -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>